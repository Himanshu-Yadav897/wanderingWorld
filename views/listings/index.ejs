<% layout('/layouts/boilerplate.ejs') -%>

<body>
    <h2>All Listings</h2>

    <!-- <form action="/listings/new" method="get">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3">
        <%   for(let listing of allListing){ %>
            
                <div class="card col" >
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card-img-overlay1">
                    <img src="<%= listing.image %>" class="card-img-top" alt="..." style="height: 17rem;">
                    </div>
                    <div class="card-body">
                      <p class="card-text">
                      <b> <%= listing.title %> </b> <br>
                      &#8377 <%= listing.price.toLocaleString("en-In") %> /night
                      </p>
                      <a href="/listings/<%= listing._id %>" class="btn btn-primary">Go somewhere</a>
                    </div>
                </a>
                  </div>
           
            
        
            <%   }  %> 
    </div>

</body>

   