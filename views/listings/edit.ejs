<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your Listing</h3>
      <form method="post" action="/listings/<%= one._id %>?_method=PUT">
        <div class="mb-3">
          <label for="title">Title</label>
          <input
            type="text"
            value="<%= one.title %>"
            name="listing[title]"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="description">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
          >
        <%= one.description %></textarea
          >
        </div>

        <div class="mb-3">
          <label for="image">Image</label>
          <input
            type="text"
            value="<%= one.image %>"
            name="listing[image]"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price">Price</label>
            <input
              type="number"
              value="<%= one.price %>"
              name="listing[price]"
              class="form-control"
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country">Country</label>
            <input
              type="text"
              value="<%= one.country %>"
              name="listing[country]"
              class="form-control"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="location">Location</label>
          <input
            type="text"
            value="<%= one.location %>"
            name="listing[location]"
            class="form-control"
          />
        </div>

        <button class="btn btn-dark edit-btn mt-3">edit</button>
      </form>
    </div>
  </div>
</body>
